<Window x:Class="Assessment_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="We-Chip-It - Main Menu" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="We-Chip-It" FontSize="32" FontWeight="Bold" />
            <TextBlock Text="Animal Microchipping Center" FontSize="16" FontStyle="Italic" />
        </StackPanel>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20">
            <Button Width="200" Height="40" Margin="0,10" Click="AddCustomer_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/resources/useradd.png" Width="24" Height="24" Margin="0 0 10 0"/>
                    <TextBlock VerticalAlignment="Center" Text="Add Customer"/>
                </StackPanel>
            </Button>
            <Button Width="200" Height="40" Margin="0,10" Click="AddAnimal_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/resources/animaladd.png" Width="24" Height="24" Margin="0 0 10 0"/>
                    <TextBlock VerticalAlignment="Center" Text="Add an Animal"/>
                </StackPanel>
            </Button>
            <Button Width="200" Height="40" Margin="0,10" Click="RecordMicrochip_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/resources/addmicro.png" Width="24" Height="24" Margin="0 0 10 0"/>
                    <TextBlock VerticalAlignment="Center" Text="Record MicroChip"/>
                </StackPanel>
            </Button>
            <Button Width="200" Height="40" Margin="0,10" Click="Quit_Click">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/resources/exiticon.png" Width="24" Height="24" Margin="0 0 10 0"/>
                    <TextBlock VerticalAlignment="Center" Text="Exit"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
