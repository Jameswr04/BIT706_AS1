<Window x:Class="Assessment_1.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Customer" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Name:" />
            <TextBox x:Name="NameTextBox"/>

            <Label Content="Address:" />
            <TextBox x:Name="AddressTextBox"/>

            <Label Content="Phone:" />
            <TextBox x:Name="PhoneTextBox"/>

            <Label Content="Email:" />
            <TextBox x:Name="EmailTextBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
