<Window x:Class="Assessment_1.RecordMicrochipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Record Microchip Implant" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Customer Name:" />
            <TextBox x:Name="CustomerNameTextBox"/>

            <Label Content="Animal Name:" />
            <TextBox x:Name="AnimalNameTextBox"/>

            <Label Content="Microchip Number (20 digits):" />
            <TextBox x:Name="MicrochipNumberTextBox"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
